        "jasmine-core": "^2.6.1",
        "minimist": "^1.2.0",
        "mongodb": "^3.2.3",
        "os": "^0.1.1",
        "reflect-metadata": "^0.1.10",
        "socket.io": "^2.1.1",
        "uuid": "^3.1.0"
    }
}
