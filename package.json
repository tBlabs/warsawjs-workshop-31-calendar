{
    "name": "express.ts",
    "version": "1.0.0",
    "description": "node with express boilerplate",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "engines": {
        "node": "8.4.0",
        "npm": "5.3.0"
    },
    "scripts": {
        "x_preinstall": "npm i -g typescript jest tslint npm-run-all",
        "start": "node ./bin/startup.js",
        "run": "npm run build && clear && npm run start",
        "watch": "tsc --watch",
        "monitor": "nodemon ./bin/startup.js",
        "serve": "run-p watch monitor",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rmdir .\\bin /s /q",
        "autofix": "tslint --fix --project .",
        "publish": "git push origin master"
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/dotenv": "^4.0.0",
        "@types/express": "^4.16.0",
        "@types/jasmine": "^2.6.3",
        "@types/jest": "^21.1.6",
        "@types/lodash": "^4.14.92",
        "@types/node": "^7.0.18",
        "@types/uuid": "^2.0.30",
        "jest": "^21.2.1",
        "nodemon": "^1.18.4",
        "npm-check-updates": "^2.14.2",
        "npm-run-all": "^4.1.2",
        "ts-jest": "^23.10.4",
        "typescript": "^2.6.2"
    },
    "dependencies": {
        "@types/mongodb": "^3.1.22",
        "async-delay": "^1.0.3",
        "asyncawait": "^1.0.7",
        "axios": "^0.17.1",
        "body-parser": "^1.18.3",
        "dotenv": "^4.0.0",
        "express": "^4.16.4",
        "git-rev": "^0.2.1",
